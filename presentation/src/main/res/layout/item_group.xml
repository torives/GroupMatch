<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_group_image"
        android:layout_width="50dp"
        android:layout_height="50dp"

        tools:src="@drawable/ic_group"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_group_notificationIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"

        android:src="@drawable/ic_match_notification"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_group_lastInteractionDate" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_group_members"
        style="@style/GroupMembersTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        android:maxLines="1"

        app:layout_constraintEnd_toStartOf="@id/item_group_notificationIcon"
        app:layout_constraintStart_toStartOf="@id/item_group_name"
        app:layout_constraintTop_toBottomOf="@id/item_group_name"
        tools:text="Fulano, Ciclana, Beltrano, Fulano, Ciclana, Beltrano, Fulano, Beltrano" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_group_lastInteractionDate"
        style="@style/GroupInteractionDateTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:text="23/04/19" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_group_name"
        style="@style/GroupTitleTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        app:layout_constraintEnd_toStartOf="@id/item_group_lastInteractionDate"

        app:layout_constraintStart_toEndOf="@id/item_group_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Grupo do Barulho" />

</androidx.constraintlayout.widget.ConstraintLayout>