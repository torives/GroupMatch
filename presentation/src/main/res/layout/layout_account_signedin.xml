<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingStart="64dp"
    android:paddingEnd="64dp">

    <ImageView
        android:id="@+id/account_signedin_profilePicture"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:src="@drawable/ic_account"

        app:layout_constraintBottom_toTopOf="@id/account_signedin_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/account_signedin_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"

        app:layout_constraintBottom_toTopOf="@id/account_signedin_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_signedin_profilePicture" />

    <EditText
        android:id="@+id/account_signedin_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"

        app:layout_constraintBottom_toTopOf="@id/account_signedin_signoutButton"
        app:layout_constraintEnd_toEndOf="@id/account_signedin_name"
        app:layout_constraintStart_toStartOf="@id/account_signedin_name"
        app:layout_constraintTop_toBottomOf="@id/account_signedin_name" />

    <Button
        android:id="@+id/account_signedin_signoutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="@string/account_signedin_signoutButtonText"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_signedin_email" />

</androidx.constraintlayout.widget.ConstraintLayout>