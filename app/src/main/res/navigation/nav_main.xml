<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/calendarFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="br.com.yves.groupmatch.scenes.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/calendarFragment"
        android:name="br.com.yves.groupmatch.scenes.calendar.CalendarFragment"
        android:label="CalendarFragment" />
    <navigation
        android:id="@+id/nav_search"
        app:startDestination="@id/connectionRoleFragment">
        <fragment
            android:id="@+id/searchBluetoothClientsFragment"
            android:name="br.com.yves.groupmatch.SearchBluetoothClientsFragment"
            android:label="SearchBluetoothClientsFragment" />
        <fragment
            android:id="@+id/connectionRoleFragment"
            android:name="br.com.yves.groupmatch.scenes.connectionRole.ConnectionRoleFragment"
            android:label="ConnectionRoleFragment">
            <action
                android:id="@+id/action_connectionRoleFragment_to_searchBluetoothClientsFragment"
                app:destination="@id/searchBluetoothClientsFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        </fragment>
    </navigation>
</navigation>